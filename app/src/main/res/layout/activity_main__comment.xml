<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main__comment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="anuson.komkid.permitgeographypro.Main_Comment"
    android:animationCache="false"
    android:background="@drawable/backgrok">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/colorGreen"
        android:layout_height="50dp"
        android:id="@+id/linTopComment">

        <TextView
            android:text="แสดงความคิดเห็น"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView92"
            android:layout_weight="1"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:background="@color/colorGreen"
        android:layout_alignParentBottom="true"
        android:id="@+id/linButtonComment">

        <EditText
            android:layout_width="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText25"
            android:layout_weight="1"
            android:gravity="center_horizontal|center"
            android:background="@color/common_google_signin_btn_text_dark_default"
            android:lines="2"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:textAlignment="textStart" />

        <Button
            android:text="ส่ง"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSent" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/livComment"
        android:layout_below="@+id/linTopComment"
        android:layout_above="@+id/linButtonComment"
        android:layout_margin="20dp" />

</RelativeLayout>